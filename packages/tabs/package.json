{
  "name": "@italia/tabs",
  "description": "Webcomponent it-tabs following open-wc recommendations",
  "license": "MIT",
  "author": "italia",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./it-tabs.js": "./dist/src/it-tabs.js"
  },
  "files": [
    "dist/src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "analyze": "cem analyze --litelement --exclude dist",
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf node_modules",
    "prepublish": "build",
    "lint": "eslint --ext .ts ./{src,stories,test} && prettier \"{src,stories,test}/**/*.ts\" --check",
    "format": "eslint --ext .ts ./{src,stories,test} --fix && prettier \"{src,stories,test}/**/*.ts\" --write",
    "test": "wtr --coverage --node-resolve --config web-test-runner.config.js"
  },
  "dependencies": {
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@italia/test-config": "workspace:^",
    "@italia/typescript-config": "workspace:^",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@web/test-runner": "^0.18.2",
    "concurrently": "^8.2.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "customElements": "custom-elements.json"
}
