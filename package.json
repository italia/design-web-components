{
  "name": "@italia/it-web-components",
  "private": true,
  "type": "module",
  "scripts": {
    "analyze": "turbo run analyze",
    "build": "turbo run build analyze",
    "generate": "node ./generate-mega-bundle.js",
    "build:bundle": "rollup -c rollup.config.js",
    "build:all": "pnpm build && pnpm generate && pnpm build:bundle",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean && rimraf node_modules",
    "prepare": "husky && pnpm test:setup",
    "release": "turbo run build",
    "test:setup": "pnpm dlx playwright install",
    "test": "turbo run test",
    "storybook:build": "pnpm build && turbo run analyze && storybook build",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "bootstrap-italia": "^2.14.0",
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@it-web-components/typescript-config": "workspace:^",
    "@open-wc/eslint-config": "^12.0.3",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/experimental-addon-test": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/web-components": "^8.6.14",
    "@storybook/web-components-vite": "^8.6.14",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@web/test-runner": "^0.18.2",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.12.0",
    "glob": "^11.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.41.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.89.0",
    "storybook": "^8.6.14",
    "turbo": "^2.5.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": "< 23"
  },
  "packageManager": "pnpm@10.11.0"
}
