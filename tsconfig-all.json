{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "lib": ["es2021", "dom", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*.ts"],
  "exclude": ["packages/*/dist", "packages/*/build", "packages/*/node_modules"],
  "references": [
    {
      "path": "packages/globals"
    },
    {
      "path": "packages/it-tabs"
    },
    {
      "path": "packages/test-config"
    }
  ]
}
